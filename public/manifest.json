      "icons": [
        {
          "src": "/icons/new-document.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Assistant",
      "short_name": "AI Help",
      "description": "Open AI writing assistant",
      "url": "/?ai=true",
      "icons": [
        {
          "src": "/icons/ai-assistant.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Templates",
      "short_name": "Templates",
